    <!--菜单条目0-->
    <LinearLayout
        android:id="@+id/ll_mine_room_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_50"
        android:layout_marginTop="@dimen/activity_size_10"
        android:background="@color/whilte"
        android:orientation="horizontal">


        <!--酒店预订文字和图标-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_50"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mine_reserve_icon"
                android:layout_width="@dimen/activity_size_19"
                android:layout_height="@dimen/activity_size_19"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@mipmap/mine_reserve_icon" />

            <TextView
                android:layout_width="@dimen/activity_size_70"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_size_15"
                android:text="@string/mine_item_reserve"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>
        <!--箭头-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:layout_width="@dimen/activity_size_10"
                android:layout_height="@dimen/activity_size_19"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/right_black_arrow" />
        </LinearLayout>
    </LinearLayout>


