<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">
    <!--蓝色背景-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_225"
        android:background="@color/homepage_top_bule">

        <ImageView
            android:id="@+id/mine_btn_setting"
            android:layout_width="@dimen/activity_size_25"
            android:layout_height="@dimen/activity_size_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_size_20"
            android:layout_marginTop="@dimen/activity_size_20"
            android:background="@mipmap/mine_btn_setting" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_pic"
            android:layout_width="@dimen/activity_size_92"
            android:layout_height="@dimen/activity_size_92"
            android:layout_centerInParent="true"
            android:background="@mipmap/home_pic" />

        <TextView
            android:id="@+id/mine_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_5"
            android:textColor="@color/whilte"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>
    <!--收藏、购物车、消息中心-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_51"
        android:background="@color/gray2"
        android:orientation="horizontal">
        <!--购物车-->
        <RelativeLayout
            android:id="@+id/mine_shopcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whilte"
            android:layout_marginRight="@dimen/activity_size_1"
            android:layout_weight="1">
            <!--第一个收藏的内部布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/activity_size_20"
                    android:layout_height="@dimen/activity_size_20"
                    android:layout_gravity="center"
                    android:background="@mipmap/mine_collect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="购物车" />
            </LinearLayout>
        </RelativeLayout>

        <!--收藏的外部布局-->
        <RelativeLayout
            android:id="@+id/mine_rl_my_like"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whilte"
            android:layout_marginRight="@dimen/activity_size_1"
            android:layout_weight="1">
            <!--第一个收藏的内部布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/activity_size_20"
                    android:layout_height="@dimen/activity_size_20"
                    android:layout_gravity="center"
                    android:background="@mipmap/mine_collect" />

                <TextView
                    android:layout_width="@dimen/activity_size_28"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_size_5"
                    android:text="@string/mine_btn_collect" />
            </LinearLayout>
        </RelativeLayout>



