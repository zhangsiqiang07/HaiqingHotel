<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>

    <cn.xiaocool.haiqinghotel.ui.ReboundScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray2">


            <ImageView
                android:id="@+id/catering_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_180"
                android:background="@mipmap/example_pic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="美食信息"
                android:textSize="@dimen/activity_size_15"
                android:layout_marginTop="@dimen/activity_size_5"
                android:paddingLeft="@dimen/activity_size_10"
                android:layout_marginBottom="@dimen/activity_size_5"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray2"
                android:orientation="vertical">

                <!--第一行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:background="@color/whilte"
                    >
                    <TextView
                        android:id="@+id/tv_cateringName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="美食名称"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_cateringPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="价格"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>


                <!--第二行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:background="@color/whilte"
                    android:layout_marginTop="@dimen/activity_size_1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="数量"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />



                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/activity_size_15">

                        <!--加减选择-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_sub"
                                android:layout_width="@dimen/activity_size_20"
                                android:layout_height="@dimen/activity_size_30"
                                android:text="—"
                                android:background="@color/gray2"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_size_20"/>

                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="@dimen/activity_size_30"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="@dimen/activity_size_20"/>

                            <TextView
                                android:id="@+id/tv_add"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@color/gray2"
                                android:layout_width="@dimen/activity_size_20"
                                android:layout_height="@dimen/activity_size_30"
                                android:text="+"
                                android:textSize="@dimen/activity_size_20"/>
                        </LinearLayout>


                    </RelativeLayout>
                </RelativeLayout>


                <!--第三行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:background="@color/whilte"
                    android:layout_marginTop="@dimen/activity_size_1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="小计"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_subTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>


                <!--第四行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="总价"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="总价"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="就餐信息"
                    android:textSize="@dimen/activity_size_15"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:paddingLeft="@dimen/activity_size_10"
                    android:layout_marginBottom="@dimen/activity_size_5"/>


                <!--下第一行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="联系人"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:id="@+id/et_catering_name"
                        android:layout_width="@dimen/activity_size_150"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:hint="请点击输入联系人"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>


                <!--下第二行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="手机号码"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:id="@+id/et_catering_phoNum"
                        android:layout_width="@dimen/activity_size_150"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:hint="请点击输入手机号"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>


                <!--下第三行-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="房间号"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <EditText
                        android:id="@+id/et_roomNum"
                        android:layout_width="@dimen/activity_size_150"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:hint="请点击输入房间号"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>

                <!--&lt;!&ndash;下第四行&ndash;&gt;-->
                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/activity_size_40"-->
                    <!--android:layout_marginTop="@dimen/activity_size_1"-->
                    <!--android:background="@color/whilte"-->
                    <!-->-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginLeft="@dimen/activity_size_10"-->
                        <!--android:text="就餐时间"-->
                        <!--android:textSize="@dimen/text_size_15"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:textColor="@color/black"-->
                        <!--/>-->
                    <!--<TextView-->
                        <!--android:id="@+id/tv_catering_time"-->
                        <!--android:layout_width="@dimen/activity_size_150"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:text="8:00前"-->
                        <!--android:textSize="@dimen/activity_size_15"-->
                        <!--android:paddingRight="@dimen/activity_size_15"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:gravity="center_vertical"-->
                        <!--/>-->

                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_40"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_10"
                        android:text="就餐日期"
                        android:textSize="@dimen/text_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_catering_date"
                        android:layout_width="@dimen/activity_size_150"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:hint="点击选择就餐日期"
                        android:textSize="@dimen/activity_size_15"
                        android:paddingRight="@dimen/activity_size_15"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_size_110"
                    android:layout_marginTop="@dimen/activity_size_1"
                    android:background="@color/whilte"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注:"
                        android:textSize="@dimen/activity_size_18"
                        android:layout_marginLeft="@dimen/activity_size_20"
                        android:layout_marginTop="@dimen/activity_size_5"
                        />
                    <LinearLayout
                        android:focusable="true" android:focusableInTouchMode="true"
                        android:layout_width="0px" android:layout_height="0px">
                        <requestFocus />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="@dimen/activity_size_330"
                        android:layout_height="@dimen/activity_size_70"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/home_booking_remark"
                        android:hint="可多行输入"
                        android:gravity="left"/>

                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_50"
                android:orientation="horizontal"
                android:background="@color/whilte">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="总价："
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_size_20"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/activity_size_20"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:id="@+id/tv_bottom_total_price" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="立即预定"
                    android:textColor="@color/whilte"
                    android:textSize="@dimen/activity_size_20"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@color/homepage_orange"
                    android:id="@+id/btn_reserve_catering_now" />

            </LinearLayout>
        </LinearLayout>
    </cn.xiaocool.haiqinghotel.ui.ReboundScrollView>

</LinearLayout>
