<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:orientation="vertical">

    <include layout="@layout/activity_top"></include>
    <!--顶部底部weight1:5分开-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--顶部viewPager-->
        <ImageView
            android:id="@+id/bg_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_180"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/home_onsale_pic"
            android:scaleType="centerCrop"/>
        <!--横向三个按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_60"
            android:background="@color/whilte"
            android:orientation="horizontal">
            <!--第一个-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_size_20"
                    android:id="@+id/tv_oprice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:text="门市价"
                    android:textSize="@dimen/activity_size_15" />

            </LinearLayout>
            <!--第二个-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_size_20"
                    android:id="@+id/tv_price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_size_5"
                    android:text="优惠价"
                    android:textSize="@dimen/activity_size_15" />

            </LinearLayout>

            <!--第三个-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:text="自助早餐"
                        android:textSize="@dimen/activity_size_18" />

                    <ImageView
                        android:layout_width="@dimen/activity_size_14"
                        android:layout_height="@dimen/activity_size_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_size_5"
                        android:layout_marginTop="@dimen/activity_size_5"
                        android:background="@mipmap/home_room_intro_fork"
                        android:textSize="@dimen/activity_size_15" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        <!--介绍分左右两段，各自分四行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_150"
            android:background="@color/whilte"
            android:orientation="horizontal">
            <!--左边四行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="上网"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_network" />

                </LinearLayout>

                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="可住"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_prople_num" />

                </LinearLayout>


                <!--第三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="楼层"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_floor" />

                </LinearLayout>

                <!--第四行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="床型"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_bedsize" />

                </LinearLayout>

            </LinearLayout>
            <!--右边四行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="窗户"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_window" />

                </LinearLayout>

                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="卫浴"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_bathroom" />

                </LinearLayout>


                <!--第三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text="面积"
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16"
                        android:id="@+id/tv_area" />

                </LinearLayout>

                <!--第四行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textSize="@dimen/activity_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_size_15"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_size_16" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--选择日期行-->
        <LinearLayout
            android:id="@+id/reserve_choose_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_size_50"
            android:layout_marginTop="@dimen/activity_size_20"
            android:background="@color/whilte">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="入住：4月5日"
                android:textSize="@dimen/text_size_15"

                android:id="@+id/tv_inday" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="离店：4月6日"
                android:textSize="@dimen/activity_size_15"

                android:id="@+id/tv_outday" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:gravity="center"
                android:text="共1晚"
                android:textSize="@dimen/activity_size_15"

                android:id="@+id/tv_day_count" />
            <!--修改按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="@dimen/activity_size_10"
                    android:layout_height="@dimen/activity_size_18"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_size_10"
                    android:background="@mipmap/right_black_arrow" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <!--底部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:background="@color/whilte">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="总价："
            android:textColor="@color/black"
            android:textSize="@dimen/activity_size_20"
            android:gravity="center"
            android:layout_weight="1.5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            android:textSize="@dimen/activity_size_20"
            android:gravity="center_vertical"
            android:layout_weight="1.5"
            android:id="@+id/tv_total_price" />
        <TextView
            android:id="@+id/tv_price_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue"
            android:text="费用明细"
            android:textSize="@dimen/text_size_15"
            android:gravity="center"
            android:layout_weight="1.6"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="立即预定"
            android:textColor="@color/whilte"
            android:textSize="@dimen/activity_size_20"
            android:gravity="center"
            android:layout_weight="1.3"
            android:background="@color/homepage_orange"
            android:id="@+id/btn_reserve_now" />

    </LinearLayout>
</LinearLayout>