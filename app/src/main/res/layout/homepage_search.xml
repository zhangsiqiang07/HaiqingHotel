<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:background="@color/gray">
        <!--返回按钮的布局-->
        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/activity_size_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/activity_size_12"
                android:layout_height="@dimen/activity_size_22"
                android:background="@mipmap/btn_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_15"/>
        </RelativeLayout>
        <!--标题头文本-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_size_25"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/homepage_search_bg">

            <ImageView
                android:layout_width="@dimen/activity_size_18"
                android:layout_height="@dimen/activity_size_18"
                android:background="@mipmap/homepage_search_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_size_5"
                />

            <EditText
                android:id="@+id/homepage_et_search"
                android:layout_marginLeft="@dimen/activity_size_5"
                android:layout_width="@dimen/activity_size_200"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/activity_size_15"
                android:hint="搜索"
                android:textColor="@color/whilte" />


        </LinearLayout>

        <Button
            android:id="@+id/homepage_btn_search"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_25"
            android:background="@mipmap/homepage_search_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:gravity="center"
            android:textSize="@dimen/activity_size_12"
            android:textColor="@color/whilte"
            />
    </RelativeLayout>
</LinearLayout>
