<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">
    <!--头部-->
    <include layout="@layout/activity_top"></include>



    <ImageView
        android:layout_width="@dimen/activity_size_80"
        android:layout_height="@dimen/activity_size_80"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_size_10"
        android:background="@mipmap/default_user_img" />

    <RadioGroup
        android:id="@+id/main_register_rg_sex"
        android:layout_marginTop="@dimen/activity_size_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <RadioButton
            android:id="@+id/rd_man"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_size_30"
            android:text="男"/>
        <RadioButton
            android:id="@+id/rd_woman"
            android:layout_marginLeft="@dimen/activity_size_60"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_size_30"
            android:text="女"/>

    </RadioGroup>
    <!--姓名布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/real_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="真实姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/real_name"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/main_ed_name"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:hint="请放心填写，我们将严格保密"
                android:maxLength="10"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>
    </LinearLayout>
    <!--横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@mipmap/gray_hori_line" />

    <!--姓名布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="城市"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/main_et_city"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:hint="请填写您所在城市"
                android:maxLength="10"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>
    </LinearLayout>
    <!--横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@mipmap/gray_hori_line" />


    <!--姓名布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="邮箱"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/main_et_email"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:hint="请填写您的邮箱地址"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>
    </LinearLayout>
    <!--横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@mipmap/gray_hori_line" />


    <!--姓名布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="生日"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_et_birthday"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请填写您的生日"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>
    </LinearLayout>
    <!--横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@mipmap/gray_hori_line" />

    <!--手机号-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/_86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="+86"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/_86"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/main_ed_phonum"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:digits="0123456789"
                android:hint="手机号将作为唯一账号"
                android:maxLength="11"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>
    </LinearLayout>
    <!--横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@mipmap/gray_hori_line" />

    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_40"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/yan_zheng_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/yan_zheng_ma"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <EditText
                android:id="@+id/main_ed_code"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:hint="请输入收到的验证码"
                android:maxLength="6"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4">

            <!--<ImageView-->
            <!--android:layout_width="@dimen/activity_size_100"-->
            <!--android:layout_height="@dimen/activity_size_40"-->
            <!--android:background="@mipmap/btn_regeister_send_code"-->
            <!--android:layout_centerInParent="true"-->
            <!--/>-->
            <Button
                android:id="@+id/send_code"
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="@dimen/activity_size_30"
                android:layout_centerInParent="true"
                android:background="@mipmap/btn_send_code"
                android:text="发送验证码"
                android:textColor="@color/whilte" />
        </RelativeLayout>
    </LinearLayout>

    <!--横线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_2"
        android:background="@mipmap/gray_hori_line" />
    <!--登录密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_50"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/pass_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_20"
                android:text="密码"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pass_word"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/main_ed_password"
                android:layout_width="@dimen/activity_size_250"
                android:layout_height="@dimen/activity_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_size_10"
                android:background="@null"
                android:hint="请设置密码"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textSize="@dimen/activity_size_15" />

        </RelativeLayout>
    </LinearLayout>

    <!--注册按钮-->
    <Button
        android:id="@+id/register"
        android:layout_width="@dimen/activity_size_300"
        android:layout_height="@dimen/activity_size_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_size_15"
        android:background="@mipmap/btn_send_code"
        android:text="注册"
        android:textColor="@color/whilte"
        android:textSize="@dimen/activity_size_18" />


</LinearLayout>
