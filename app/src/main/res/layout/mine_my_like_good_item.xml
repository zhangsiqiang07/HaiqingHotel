<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_size_100"
        android:layout_marginTop="@dimen/activity_size_1"
        android:background="@color/whilte"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <ImageView
                android:id="@+id/mine_iv_my_like"
                android:layout_width="@dimen/activity_size_80"
                android:layout_height="@dimen/activity_size_80"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/mine_tv_good_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_size_15" />

                <TextView
                    android:id="@+id/mine_my_like_good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_size_30"
                    android:text="¥666"
                    android:textColor="@color/homepage_orange"
                    android:textSize="@dimen/activity_size_18" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/mine_tv_good_intro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_size_20"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_size_13" />

            </LinearLayout>


            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/mine_my_like_btn_reserve"
                    android:layout_width="@dimen/activity_size_50"
                    android:layout_height="@dimen/activity_size_25"
                    android:background="@color/homepage_orange"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_size_20"
                    android:text="预订"
                    android:textColor="@color/whilte"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
